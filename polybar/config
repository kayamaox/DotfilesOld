enable-ipc = true

tray-padding = 2
tray-transparent = true
tray-detached = false
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1

; BAR     
; ===============

; Bar / Left
;;;;;;;;;;;;;;;;;;;;;
[bar/left]
inherit = bar/default
monitor = LVDS-1
modules-left = 
modules-right = 

; Bar / Center
;;;;;;;;;;;;;;;;;;;;;
[bar/center]
inherit = bar/default
monitor = VGA-1
modules-right = filesystem memory cpu temperature
padding-right = 1
tray-position = right

; Bar / Right
;;;;;;;;;;;;;;;;;;;;;
[bar/right]
inherit = bar/default
monitor = HDMI-1
modules-left = i3
modules-right = xkeyboard battery volume wlan eth date powermenu

; Xwindow
;;;;;;;;;;;;;;;;;;;;;
[module/xwindow]
type = internal/xwindow
label = %title:0:40:...%
label-underline= ${colors.underline}

; BSPWM
;;;;;;;;;;;;;;;;;;;;
[module/bspwm]
type = internal/bspwm

label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-foreground= ${colors.foreground}
label-focused-underline= ${colors.underline}
label-focused-padding = 2

label-occupied = %icon%
label-occupied-padding = 2

label-urgent = %icon%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

; I3
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
enable-click = true
enable-scroll = false
fuzzy-match = true
wrapping-scroll = false

label-mode-padding = 1
