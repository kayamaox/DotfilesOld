active          =   ${xrdb:active}

; Bar Principale
; ======================
[bar/default]
width           =   100%
height          =   30
radius          =   0
fixed-center    =   true

; Definition de l'apparence
; ==============================================
background              =   ${colors.background}
foreground              =   ${colors.foreground}
