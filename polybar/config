border-size             =   0
border-color            =   #00000000
underline-size          =   2
underline-color         =   #eee
spacing                 =   1
padding-left            =   0
padding-right           =   0
module-margin           =   0
border-bottom           =   1


; La Police et les icones du font
; ===============================
font-0 = DejaVu Sans Mono:size=8
font-1 = FontAwesome:size=9
